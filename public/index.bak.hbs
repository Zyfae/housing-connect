<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <script src="https://www.gstatic.com/firebasejs/4.9.0/firebase.js"></script>
        <script src="src/init.js"></script>
        <script src="src/checkLoggedIn.js"></script>
        <script src="src/classes/Listing.js"></script>
        <title>Housing Connect</title>
    </head>
    <body>
        <h1>Housing Connect: Listings</h1>

        <div>
            <b>Filter By:</b>
            <br><input id="pricefilter" onclick="applyFilters()" type="checkbox"> Price:
                <input id="minPrice" onkeypress="return hitEnter(event)" type="number" placeholder="Min">
                <input id="maxPrice" onkeypress="return hitEnter(event)" type="number" placeholder="Max">

            <br><input id="sizefilter" onclick="applyFilters()" type="checkbox"> Size:
                <input id="minSize" onkeypress="return hitEnter(event)" type="number" placeholder="Min">
                <input id="maxSize" onkeypress="return hitEnter(event)" type="number" placeholder="Max">

            <br><input id="cityfilter" onclick="applyFilters()" type="checkbox"> City:
                <input id="cityIn" onkeypress="return hitEnter(event)" type="text">
            <br><input id="statefilter" onclick="applyFilters()" type="checkbox"> State:
                <input id="stateIn" onkeypress="return hitEnter(event)" type="text">
            <br><input id="zipfilter" onclick="applyFilters()" type="checkbox"> ZIP:
                <input id="zipIn" onkeypress="return hitEnter(event)" type="text">

            <br><input id="hostfilter" onclick="applyFilters()" type="checkbox"> Host:
                <input id="hostIn" onkeypress="return hitEnter(event)" type="text">

            <br><input id="typefilter" onclick="applyFilters()" type="checkbox"> Type:
            <select id="typeIn" onchange="applyFilters()">
                <option value="Apartment">Apartment</option>
                <option value="House">House</option>
                <option value="Condo">Condo</option>
                <option value="Studio">Studio</option>
                <option value="Room">Room</option>
            </select>
            <br><input id="bedfilter" onclick="applyFilters()" type="checkbox"> Type:
            <select id="bedIn" onchange="applyFilters()">
                <option value="1">1 Bed</option>
                <option value="2">2 Beds</option>
                <option value="3">3 Beds</option>
                <option value="4">4+ Beds</option>
            </select>
            <br><input id="bathfilter" onclick="applyFilters()" type="checkbox"> Type:
            <select id="bathIn" onchange="applyFilters()">
                <option value="1">1 Bath</option>
                <option value="2">2 Baths</option>
                <option value="3">3+ Baths</option>
            </select>

            <br><input id="petsfilter" onclick="applyFilters()" type="checkbox"> Pets Allowed
            <br><input id="smokingfilter" onclick="applyFilters()" type="checkbox"> Smoking Allowed
        </div>

        <div id="inject"></div>

        <table style="width:600px">
            <tr>
                <td>
                    <div style="position:absolute;">Title:</div>
                    <input id="title" style="margin-left: 70px" type="text">
                </td>
                <td>
                    <div style="position:absolute;">Type:</div>
                    <select id="type" style="margin-left: 70px; width: 173px; height:21px;">
                        <option value="Apartment">Apartment</option>
                        <option value="House">House</option>
                        <option value="Condo">Condo</option>
                        <option value="Studio">Studio</option>
                        <option value="Room">Room</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <div style="position:absolute;">Address:</div>
                    <input id="address" style="margin-left: 70px" type="text">
                </td>
                <td>
                    <div style="position:absolute;">City:</div>
                    <input id="city" style="margin-left: 70px" type="text">
                </td>
            </tr>
            <tr>
                <td>
                    <div style="position:absolute;">State:</div>
                    <input id="state" style="margin-left: 70px" type="text">
                </td>
                <td>
                    <div style="position:absolute;">ZIP:</div>
                    <input id="zip" style="margin-left: 70px" type="text">
                </td>
            </tr>
            <tr>
                <td>
                    <div style="position:absolute;">Host:</div>
                    <input id="host" style="margin-left: 70px" type="text">
                </td>
                <td>
                    <div style="position:absolute;">Utilities:</div>
                    <input id="utilities" style="margin-left: 70px" type="text">
                </td>
            </tr>
            <tr>
                <td>
                    <div style="position:absolute;"># Beds:</div>
                    <input id="bedNum" style="margin-left: 70px" type="number">
                </td>
                <td>
                    <div style="position:absolute;"># Baths:</div>
                    <input id="bathNum" style="margin-left: 70px" type="number">
                </td>
            </tr>
            <tr>
                <td>
                    <div style="position:absolute;">Price:</div>
                    <input id="price" style="margin-left: 70px" type="number">
                </td>
                <td>
                    <div style="position:absolute;">Size:</div>
                    <input id="size" style="margin-left: 70px" type="number">
                </td>
            </tr>
            <tr>
                <td>
                    <div style="position:absolute;">Pets:</div>
                    <input id="pets" style="margin-left: 70px" type="radio" name="yn1" value="Yes">Yes
                    <input style="margin-left: 10px" type="radio" name="yn1" value="No" checked>No
                </td>
                <td>
                    <div style="position:absolute;">Smoking:</div>
                    <input id="smoking" style="margin-left: 70px" type="radio" name="yn2" value="Yes">Yes
                    <input style="margin-left: 10px" type="radio" name="yn2" value="No" checked>No
                </td>
            </tr>
        </table>

        <button type="button" onclick="addListing()" style="margin-top: 5px">Add Listing</button>
        <button type="button" onclick="signOut()" style="margin-top: 5px">Logout</button>

        <script src="src/loadfb.js"></script>
    </body>
</html>